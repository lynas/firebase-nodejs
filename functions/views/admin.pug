extends layout

block content
    .container-fluid
        .row
            .col-lg-4
            .col-lg-4
                h2 Create new Route
                form(class="add_new_route_form" name="add_new_route_form")
                    table(class="table")
                        tr
                            td Bus Name
                            td
                                input(name="bus_name")
                        tr
                            td Counter
                            td
                                input(name="counter")
                        tr
                            td From
                            td
                                input(name="from")
                        tr
                            td To
                            td
                                input(name="to")
                        tr
                            td Contact Number
                            td
                                input(name="contact_number")
                        tr
                            td Booking Number
                            td
                                input(name="booking_number")
                        tr
                            td Bus Fare
                            td
                                .bus_type
                                    table
                                        tr
                                            td
                                                span(style="margin-right: 10px") Economy :
                                            td
                                                input(name="economy_fare")
                                            td
                                                span(style="margin-left: 10px") Taka
                                            tr
                                                td
                                                    span(style="margin-right: 10px") AC :
                                                td
                                                    input(name="ac_fare")
                                                td
                                                    span(style="margin-left: 10px") Taka
                                            tr
                                                td
                                                    span(style="margin-right: 10px") Business :
                                                td
                                                    input(name="business_fare")
                                                td
                                                    span(style="margin-left: 10px") Taka
                        tr
                            td Bus Schedule
                                button(class="add_bus_schedule") Add Time
                            td
                                .bus_schedule
                                    select(name="option_bus_schedule_1")
                                        option economy
                                        option ac
                                        option business
                                    span(style="margin-left:10px; margin-right:10px;")
                                        input(name="bus_schedule_1")
                                    select(name="option_time_bus_schedule_1")
                                        option am
                                        option pm
                    button(class="new_bus_add btn btn-primary") Submit




            .col-lg-4
        .row
            .col-lg-4
            .col-lg-4
            .col-lg-4

